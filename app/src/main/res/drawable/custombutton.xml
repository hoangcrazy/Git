<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:layout_width="100dp" android:layout_height="60dp">
            <corners android:radius="30dp" />
            <gradient android:angle="90" android:endColor="#E1DFDF" android:startColor="#4E4D4D" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:layout_width="60dp" android:layout_height="100dp">
            <corners android:radius="30dp" />
            <gradient android:angle="90" android:endColor="#78E478" android:startColor="#02E102" />
        </shape>
    </item>
</selector>